<div class='container-md bg-light rounded-3 d-flex p-4'>
  <div class='d-flex flex-column bg-primary-subtle rounded-3 align-items-center justify-content-around p-5 gap-4'>

    <%= image_tag(@location.current.icon_url, width: 180) %>

    <h1 class='display-3'><%= @location.current.temperature %>&deg;F</h1>

    <div class='text-center'>
      <h3>Today</h3>
      <h4><%= @location.current.day %></h4>
      <p><%= @location.current.description%></p>
    </div>

    <div class='d-flex flex-column'>
      <span>Wind: <%= @location.current.wind %> KM/H</span>
    </div>

  </div>
  <div class='flex-fill d-flex flex-column p-4'>
    <div>
      <%= link_to 'Back to Locations', '/', class: 'd-block text-end' %>
      <h2 class='text-center display-6'>Location: <%= @location.name.titleize %></h2>
    </div>

    <div class='flex-fill p-4 d-flex justify-content-between'>
      <% @location.upcoming.each do |weather| %>
        <div class='d-flex flex-column gap-3 justify-content-around align-items-center bg-dark-subtle rounded-3 p-2'>
          <div class='text-center'>
            <h3><%= weather.day %></h3>
          </div>
          <%= image_tag(weather.icon_url, width: 100) %>
          <p class='display-6'><%= weather.temperature %>&deg;F</p>

          <div class='d-flex flex-column'>
            <span><%= weather.wind %> KM/H</span>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
